<Page x:Class="WpfLayoutUIOefenblad.Exercises.TabControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfLayoutUIOefenblad.Exercises"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="TabControl">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="250px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Frame x:Name="fraAssignment" Grid.Row="0" Grid.Column="0" Background="#eeeeee" />
        <Border Background="#EEFDEF" BorderBrush="#6B6CB0" BorderThickness="1" Padding="12" Margin="20" Grid.Row="1">
            <!-- TODO: PAS HIERONDER DE XAML AAN -->

            <TabControl>

                <!-- ✅ Tab 1 : Account -->
                <TabItem Header="Account">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">E-mail:</Label>
                        <TextBox Grid.Row="0" Grid.Column="1" Margin="5"/>

                        <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">Wachtwoord:</Label>
                        <PasswordBox Grid.Row="1" Grid.Column="1" Margin="5"/>

                        <Button Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" 
                                VerticalAlignment="Top" Margin="5" Padding="10,3">Wijzigen</Button>
                    </Grid>
                </TabItem>

                <!-- ✅ Tab 2 : Voorkeuren -->
                <TabItem Header="Voorkeuren">
                    <StackPanel Margin="10">
                        <CheckBox Margin="0,0,0,10" IsChecked="True">Nieuwsbrief ontvangen</CheckBox>
                        <CheckBox Margin="0,0,0,10" IsChecked="True">Donkere modus</CheckBox>
                        <CheckBox Margin="0,0,0,10">Meldingen toestaan</CheckBox>
                    </StackPanel>
                </TabItem>

                <!-- ✅ Tab 3 : Over -->
                <TabItem Header="Over">
                    <TextBlock Margin="10" TextWrapping="Wrap">
                        Dit is een voorbeeldapplicatie om TabControl te oefenen. Gebruik tabs om instellingen <Run FontWeight="Bold">logisch te groeperen</Run> en het scherm overzichtelijk te houden.
                        <LineBreak/>
                        <LineBreak/>
                        Safi Harare, 2026.
                    </TextBlock>
                </TabItem>

            </TabControl>

        </Border>
    </Grid>
</Page>